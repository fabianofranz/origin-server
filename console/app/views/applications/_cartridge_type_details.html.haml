- external = cartridge.cartridge_type.external?

.custom-cartridge-details.hide{:id => cartridge.name.parameterize}
  - if cartridge.description.present?
    .row-fluid{:style => 'margin-bottom:5px;'}
      %span.span12= cartridge.description

  - if cartridge_type.version.present?
    .row-fluid
      %span.span2 
        %strong Version
      %span.span10= cartridge_type.version

  - if cartridge_type.license.present?
    .row-fluid
      %span.span2 
        %strong License
      %span.span10
        - if cartridge_type.license_url.present?
          =link_to cartridge_type.license, cartridge.cartridge_type.license_url
        - else
          = cartridge_type.license

  - if cartridge_type.website.present?
    .row-fluid
      %span.span2 
        %strong Website
      %span.span10=link_to cartridge_type.website, cartridge.cartridge_type.website

  - if cartridge_type.help_topics.present?
    - cartridge_type.help_topics.each do |k, v|
      .row-fluid
        %span.span2
          %strong= k
        %span.span10= link_to v, v
        
  .row-fluid
    %span.span2 
      %strong Origin
    - if external
      %span.span10.truncate external service
    - else
      %span.span10.truncate= link_to 'custom cartridge', cartridge.url, {:target => 'blank'}

  .row-fluid
    %span.span2 
      %strong Security
    %span.span10.truncate= cartridge_type.automatic_updates? ? 'receives automatic updates' : 'does not receive automatic updates'
